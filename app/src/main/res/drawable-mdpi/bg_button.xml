<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#628fc7"/>
            <gradient android:angle="-90" android:endColor="#6a9ced" android:startColor="#5ab7ce"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#7d91f4"/>
            <gradient android:angle="-90" android:endColor="#64a2e9" android:startColor="#81a0fc"/>
        </shape>
    </item>
</selector>